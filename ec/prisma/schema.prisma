generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  createdAt   DateTime @default(now())
  img         String

  reviews Review[] @relation("ProductReviews")
}

model Review {
  id      String   @id @default(cuid())
  user    User     @relation("UserReview", fields: [userId], references: [id])
  content String
  stars   Int
  date    DateTime @default(now())

  product   Product @relation("ProductReviews", fields: [productId], references: [id])
  productId String
  userId    String
}

model User {
  id       String @id @default(cuid())
  name     String
  lastname String
  img      String

  email    String
  password String
  reviews  Review[] @relation("UserReview")
}
